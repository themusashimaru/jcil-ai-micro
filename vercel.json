{
  "buildCommand": "pnpm run build",
  "devCommand": "pnpm run dev",
  "installCommand": "pnpm install",
  "framework": "nextjs",
  "git": {
    "deploymentEnabled": {
      "main": true
    }
  },
  "functions": {
    "app/api/chat/**/*.ts": {
      "memory": 1024,
      "maxDuration": 300
    },
    "app/api/code-lab/**/*.ts": {
      "memory": 1024,
      "maxDuration": 300
    },
    "app/api/cron/**/*.ts": {
      "memory": 512,
      "maxDuration": 60
    }
  },
  "crons": [
    {
      "path": "/api/devotional/daily",
      "schedule": "1 0 * * *"
    },
    {
      "path": "/api/cron/process-pending",
      "schedule": "* * * * *"
    },
    {
      "path": "/api/cron/cleanup-rate-limits",
      "schedule": "0 * * * *"
    },
    {
      "path": "/api/cron/cleanup-stale-queue",
      "schedule": "*/5 * * * *"
    },
    {
      "path": "/api/cron/health-check",
      "schedule": "*/10 * * * *"
    }
  ]
}
