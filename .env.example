# ==============================================================================
# DELTA-2 ENVIRONMENT VARIABLES
# ==============================================================================
# Copy this file to .env.local and fill in your values

# ------------------------------------------------------------------------------
# SUPABASE (Authentication & Database)
# ------------------------------------------------------------------------------
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# ------------------------------------------------------------------------------
# AI PROVIDERS
# ------------------------------------------------------------------------------
# xAI (Grok) - Required for live search
XAI_API_KEY=xai-your-api-key-here

# OpenAI - Optional alternative provider
OPENAI_API_KEY=sk-your-openai-key-here

# Google AI - Optional
GOOGLE_AI_API_KEY=your-google-ai-key-here

# ------------------------------------------------------------------------------
# REDIS (Rate Limiting & Caching)
# ------------------------------------------------------------------------------
UPSTASH_REDIS_REST_URL=https://your-redis.upstash.io
UPSTASH_REDIS_REST_TOKEN=your-redis-token-here

# ------------------------------------------------------------------------------
# STRIPE (Payments)
# ------------------------------------------------------------------------------
STRIPE_SECRET_KEY=sk_test_your-stripe-key-here
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret-here
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your-publishable-key-here

# ------------------------------------------------------------------------------
# DEPLOYMENT
# ------------------------------------------------------------------------------
NEXT_PUBLIC_APP_URL=http://localhost:3000

# ------------------------------------------------------------------------------
# FEATURE FLAGS (Optional)
# ------------------------------------------------------------------------------
ENABLE_VOICE_INPUT=true
ENABLE_IMAGE_GENERATION=true
ENABLE_LIVE_SEARCH=true
